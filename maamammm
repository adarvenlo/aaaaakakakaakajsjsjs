    <script>
        // --- MOCK DATA (Voorbeeld content) ---
        const tasks = [
            { title: "Kast naar zolder tillen", desc: "Ik zoek iemand die even 10 minuten kan helpen tillen. Zwaar ding.", price: 15, dist: "200m", time: "Now" },
            { title: "Figuranten gezocht videoclip", desc: "Voor een TikTok shoot hebben we 5 mensen nodig op de achtergrond.", price: 25, dist: "1.2km", time: "Today" },
            { title: "Hond uitlaten (Grote herder)", desc: "Ik ben ziek, wie kan Max uitlaten?", price: 10, dist: "500m", time: "2h left" },
            { title: "IKEA kast monteren", desc: "PAX kast in elkaar zetten, ik heb gereedschap.", price: 40, dist: "800m", time: "Tomorrow" },
            { title: "Boodschappen doen", desc: "Klein lijstje bij de AH halen.", price: 7.50, dist: "150m", time: "Now" }
        ];

        const people = [
            { name: "Sanne Janssen", skills: ["Graphic Design", "Moving"], rating: 4.9, dist: "300m" },
            { name: "Mark de Vries", skills: ["Handyman", "Painting", "Gardening"], rating: 4.5, dist: "1.5km" },
            { name: "Kevin B.", skills: ["Tech Support", "Gaming"], rating: 5.0, dist: "600m" }
        ];

        // --- RENDER FUNCTIONS ---
        function renderFeed() {
            const container = document.getElementById('feed-container');
            let html = '';
            tasks.forEach(task => {
                html += `
                <div class="card">
                    <div class="card-header">
                        <span class="card-title">${task.title}</span>
                        <span class="distance-badge"><i class="fa-solid fa-location-arrow"></i> ${task.dist}</span>
                    </div>
                    <div class="card-body">
                        <p>${task.desc}</p>
                    </div>
                    <div class="card-footer">
                        <span class="price-tag">‚Ç¨ ${task.price.toFixed(2)}</span>
                        <button class="btn">I can help</button>
                    </div>
                </div>`;
            });
            container.innerHTML = html;
        }

        function renderSkills() {
            const container = document.getElementById('skills-container');
            let html = '';
            people.forEach(p => {
                let tags = p.skills.map(s => `<span class="skill-tag">${s}</span>`).join('');
                html += `
                <div class="person-card">
                    <div class="avatar">${p.name.charAt(0)}</div>
                    <div class="person-info">
                        <div class="person-name">${p.name} <span style="font-size:12px; color:#fbbf24;">‚òÖ ${p.rating}</span></div>
                        <div class="skill-tags">${tags}</div>
                        <div style="font-size: 11px; color: var(--text-sub); margin-top: 2px;">üìç ${p.dist}</div>
                    </div>
                    <button class="btn btn-outline" style="padding: 6px 12px; font-size: 12px;">Approach</button>
                </div>`;
            });
            container.innerHTML = html;
        }

        // --- TAB SWITCHING LOGIC ---
        function switchTab(tabId, navElement) {
            // Verberg alle secties
            document.querySelectorAll('.section').forEach(el => el.classList.remove('active'));
            // Toon de gekozen sectie
            document.getElementById(tabId).classList.add('active');

            // Update Nav Icons
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            // Als navElement is meegegeven (soms niet bij automatische switch)
            if(navElement) {
                navElement.classList.add('active');
            }
        }

        // --- DARK MODE LOGIC ---
        const toggle = document.getElementById('darkModeToggle');
        
        // Check local storage of systeem voorkeur bij laden
        if (localStorage.getItem('theme') === 'dark' || 
           (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.setAttribute('data-theme', 'dark');
            toggle.checked = true;
        }

        toggle.addEventListener('change', function() {
            if(this.checked) {
                document.documentElement.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
            } else {
                document.documentElement.setAttribute('data-theme', 'light');
                localStorage.setItem('theme', 'light');
            }
        });

        // Init
        renderFeed();
        renderSkills();

    </script>
</body>
</html>
